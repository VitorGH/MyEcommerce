@model MyEcommerce.Models.Product
@{
    ViewData["Title"] = "Excluir Produto";
}

<h1>Excluir Produto</h1>

<div class="alert alert-danger">
    Tem certeza que deseja excluir este produto?
</div>

<div class="card" style="max-width: 400px;">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <p><strong>Preco:</strong> R$ @Model.Price.ToString("N2")</p>
        <p><strong>Quantidade:</strong> @Model.Amount</p>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirmar Exclusao</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
