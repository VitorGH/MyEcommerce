@page
@model MyEcommerce.Pages.Admin.Products.CreateModel
@{
    ViewData["Title"] = "Novo Produto";
}

<h1>Novo Produto</h1>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input asp-for="Product.Name" class="form-control"/>
    </div>
    <div class="mb-3">
        <label class="form-label">Descrição</label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Preço</label>
        <input asp-for="Product.Price" type="number" step="0.01" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Quantidade</label>
        <input asp-for="Product.Amount" type="number" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
