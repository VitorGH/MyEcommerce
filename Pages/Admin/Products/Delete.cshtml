@page "{id:int}"
@model MyEcommerce.Pages.Admin.Products.DeleteModel
@{
    ViewData["Title"] = "Excluir Produto";
}

<h1>Excluir Produto</h1>

<div class="alert alert-danger">
    <p>Tem certeza que deseja excluir este produto?</p>
</div>

<div class="card" style="max-width: 400px;">
    <div class="card-body">
        <h5 class="card-title">@Model.Product.Name</h5>
        <p class="card-text">@Model.Product.Description</p>
        <p><strong>Preco:</strong> R$ @Model.Product.Price.ToString("N2")</p>
        <p><strong>Quantidade:</strong> @Model.Product.Amount</p>
    </div>
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="Product.Id" />
    <button type="submit" class="btn btn-danger">Confirmar Exclusao</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>