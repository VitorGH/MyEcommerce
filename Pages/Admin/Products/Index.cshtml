@page
@model MyEcommerce.Pages.Admin.Products.IndexModel
@{
    ViewData["Title"] = "Gerenciar Produtos";
}

<h1>Gerenciar Produtos</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Novo Produto</a>
</p>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Descricao</th>
            <th>Preco</th>
            <th>Quantidade</th>
            <th>Acoes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model.Products)
        {
            <tr>
                <td>@produto.Id</td>
                <td>@produto.Name</td>
                <td>@produto.Description</td>
                <td>R$ @produto.Price.ToString("N2")</td>
                <td>@produto.Amount</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@produto.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-page="Delete" asp-route-id="@produto.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>